#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to another page.
# The redirection is configured as a "301 Moved Permanently"

apt-get update
apt-get install -y nginx

echo "Hello World!" | sudo tee /var/www/html/index.html

location="server_name _;\n\trewrite ^\/redirect_me https:\/\/github.com\/brivan1 permanent;"

sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-availble/welcome.com

sudo sed -i "s/server_name _;/$location/" /etc/nginx/sites-enabled/default

sudo service nginx restart
